.side-bar
  .side-header
    .side-header__contents
      .side-header__contents__user-name
        = current_user.name
      .side-header__contents__icons
        = link_to new_group_path, class: "side-header__contents__icons__icon" do
          = icon('far', 'edit')
          %span<>
        = link_to edit_user_path(current_user), class: "side-header__contents__icons__icon" do
          = icon('fas', 'cog')
          %span<>
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group.id), class: "group__group-name" do
          = group.name
        .group__latest-message
          = group.show_last_message
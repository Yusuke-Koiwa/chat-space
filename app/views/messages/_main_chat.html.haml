.chat-main
  .main-header
    .main-header__info
      .main-header__info__group-name
        = @group.name
      .main-header__info__member-list
        Member :
        - @users.each do |user|
          = user.name

    = link_to edit_group_path(@group), class: "main-header__edit-btn" do
      Edit
  .message-list
    = render @messages
      
  .message-form
    .form-items
      = form_for [@group, @message] do |f|
        .form-items__input
          = f.text_field :body, class: "form-items__input__text", placeholder: "type a message"
          = f.label :image, class: "form-items__input__image" do
            = icon('fas', 'image')
            = f.file_field :image
        = f.submit 'Send', class: "form-items__send-btn"
